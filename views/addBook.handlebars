<form method="post" action="/addBook">
    <input type="text" name="bookName" id="bookName">
    <input type="text" name="bookAuthor" id="bookAuthor">
    <input type="text" name="bookGenre" id="bookGenre">
    <button type="submit">Add book</button>
</form>

